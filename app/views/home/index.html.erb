<div class="site-section bg-light">
      <div class="container">
        <div class="row">
          <div class="col-md-12 mb-5 mb-md-0" data-aos="fade-up" data-aos-delay="100">
            <h2 class="mb-5 h3">Publications récentes</h2>
            <div class="rounded border jobs-wrap">

              <% @offers.each do |of| %>
              
              <div class="job-item d-block d-md-flex align-items-center">
                <div class="job-details h-100">

                 
                  
                   

                  <div class="p-3 align-self-center">
                      <div class="align-items-center">
                         <h2 class="mr-3 text-black"><%= of.title %><span class="label label-info"></span></h2>
                         <div class="badge-wrap">
                          <span class="bg-warning text-white badge py-2 px-4"><%= Interested.where(offer_id: of.id).length %></span>
                          <span class="bg-danger text-white badge py-2 px-4"><%= of.delais %><span> Semaine</span></span>
                        </div>
                      </div>

                    <div class="mr-3"><%= of.description %></div>
                    <div ><span class="icon-money mr-1"></span> <%= of.price %> Ar</div>
                    <div>
                      <% if signed_in %>
                    
                        <% if Userservice.find(of.userservice_id).email == current_user.email || uroot %>
                          <span><%= link_to "voir les interessés", list_path(of.id) %></span><br>
                          </span><%= link_to "effacer", offer_path(of), method: :delete, data: {confirm: "Voulez vous vraiment effacer cette publication ?"} %></span>
                        <% end %>

                      <% end %>
                    </div>
                  </div>
                </div>

                <% if utype %>
                <div class="job-category align-self-center">
                  <div class="p-3">
                    <span class="p-2">
                      
                        <% if Interested.find_by(offer_id: of.id, userjob_id: current_user.id) %>
                          <%= link_to "Déjà interessé", interested_path(of.id), method: :delete, class:"btn btn-primary" %>
                        <% else %>
                          <%= link_to "Interessé", interesteds_path(of.id), class:"btn btn-primary" %>
                        <% end %>
                      
          
                    </span>
                  </div>
                </div>
                <% end %>  
              </div>
              <% end %>
            </div>
          </div>



      </div>
    </div>
</div>


