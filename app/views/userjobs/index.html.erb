

<div class="site-section bg-light">
    <div class="container">
        <div class="row">
        	<div class="p-3 mb-3 bg-white">
				<table style="border-collapse: collapse; margin: 10px">
					<thead>
						<td style="border: 2px solid black; padding: 0px 10px; width: 320px; height: 25px">Nom </td>
						<td style="border: 2px solid black; padding: 0px 10px; width: 320px; height: 25px">Description </td>
						<% if uroot %>
						<td style="border: 2px solid black; padding: 0px 10px; width: 320px; height: 25px">Option </td>
						<% end %>
					</thead>
				<% @user.each do |x| %>
					<tr>
						<td style="border: 2px solid black; padding: 0px 10px; width: 320px; height: 25px">
							<%= x.firstname %>
						</td>
						<td style="border: 2px solid black; padding: 0px 10px; width: 320px; height: 25px">
							<%= x.description %>
						</td>
						<% if uroot %>
						<td style="border: 2px solid black; padding: 0px 10px; width: 320px; height: 25px">

								<%= link_to "effacer", method: :delete, data: {confirm: "etes-vous sure d'effacer ce profil?"} %>

						</td>
						<% end %>
					</tr>
				<% end %>
				</table>

				<table  style="border-collapse: collapse; margin: 10px">
				<% if uroot %>
						<thead>
							<tr>List des Offres</tr>
						</thead>
						<% @user1.each do |y| %>
						<tr>
								<td style="border: 2px solid black; padding: 0px 10px; width: 320px; height: 25px"><%= y.lastname %></td>
								<td style="border: 2px solid black; padding: 0px 10px; width: 320px; height: 25px"><%= y.email %></td>
								<% if uroot %>
									<td style="border: 2px solid black; padding: 0px 10px; width: 320px; height: 25px"><%= link_to "effacer", method: :delete, data: {confirm: "etes-vous sure d'effacer ce profil?"} %></td>
								<% end %>	
						</tr>
						<% end %>
				<% end %>
				</table>
			</div>
			

		</div>
		
	</div>	
</div>

