<div class="site-section bg-light">
      <div class="container">
        <div class="row">


        	
          
          <div class="col-md-12 col-lg-8 mb-5">
          
            <div class="p-5 bg-white">
            	<h1>Modification du Profil</h1>
            	<%= form_for @user do |t| %>
              <div class="row form-group">
                <div class="col-md-12 mb-3 mb-md-0">
                	<%= t.label :firstname, "Nom : ", class:"font-weight-bold" %>
					<%= t.text_field :firstname, class:"form-control" %>
                </div>
              </div>

              <div class="row form-group">
                <div class="col-md-12">
                  	<%= t.label :lastname, "Prenom : ", class:"font-weight-bold" %>
					<%= t.text_field :lastname, class:"form-control" %>
                </div>
              </div>


              <div class="row form-group">
                <div class="col-md-12">
                  	<%= t.label :email, "Email : ", class:"font-weight-bold" %>
					<%= t.email_field :email, class:"form-control" %>
                </div>
              </div>

              <div class="row form-group">
                <div class="col-md-12">
                  	<%= t.label :telephone, "N° telephone : ", class:"font-weight-bold" %>
					<%= t.text_field :telephone, class:"form-control" %>
                </div>
              </div>

              <div class="row form-group">
                <div class="col-md-12">
                  	<%= t.label :description, "Decrivez nous votre talent : ", class:"font-weight-bold" %>
					<%= t.text_area :description, class:"form-control" %>
                </div>
              </div>

              <div class="row form-group">
                <div class="col-md-12">
                  	<%= t.label :price, "Prix : ", class:"font-weight-bold" %>
					<%= t.text_field :price, class:"form-control" %><span>Ar/mois</span>
                </div>
              </div>


              <div class="row form-group">
                <div class="col-md-12">
                  	<%= t.label :avatar, "Photo de profil : ", class:"font-weight-bold" %>
					<%= t.file_field :avatar %>
                </div>
              </div>


              	<div class="row form-group">
	                <div class="col-md-12">
	                	<%= t.label :Category, "Category : ", class:"font-weight-bold" %>
		              	<select name="user[category]">
							<% @categories.each do |opt| %>
								<option> <%= opt.title %></option>
							<% end %>
						</select>
					</div>
				</div>

              <div class="row form-group">
                <div class="col-md-12">
                	<%= t.submit "Appliquer les Changements", class:"btn btn-primary pill px-4 py-2" %>
                </div>
              </div>

  				<% end %>
            </div>
          </div>

          <div class="col-lg-4">
	            <div class="p-4 mb-3 bg-white">
	              <h3 class="h5 text-black mb-3">Modification du Profil</h3>
	              <p class="mb-0 font-weight-bold">Conseil</p>
	              <p class="mb-4">Ne mettez pas des signes inutile car vous risquerez de perde du temps</p>

	              <p class="mb-0 font-weight-bold">Phone</p>
	              <p class="mb-4"><a href="#">+261 33 08 157 33</a></p>

	              <p class="mb-0 font-weight-bold">Email Address</p>
	              <p class="mb-0"><a href="#">zaraomadagascar@gmail.com</a></p>

	            </div>
	            
	            <div class="p-4 mb-3 bg-white">
	              <h3 class="h5 text-black mb-3">Plus d'Info</h3>
	              <p>Contactez nous pour plus d'inforamtion.</p>
	            </div>
        	</div>

        </div>
      </div>
</div>

