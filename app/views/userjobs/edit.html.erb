<h1>EDIT USER JOB</h1>

<%= form_for @user do |t| %>
	
	<%= t.label :firstname, "Nom: " %>
	<%= t.text_field :firstname %><br>

	<%= t.label :lastname, "Prenom: " %>
	<%= t.text_field :lastname %><br>

	<%= t.label :email, "Email: " %>
	<%= t.email_field :email %><br>
	
	<%= t.label :telephone, "N telephone: " %>
	<%= t.text_field :telephone %><br>

	<%= t.label :description, "petit description de vous: " %>
	<%= t.text_area :description %><br>

	<%= t.label :price, "Prix: " %>
	<%= t.text_field :price %><span>$/mois</span><br>

	<select name="user[category]" >
		<% @categories.each do |opt| %>
			<% if opt.id == @user.category_id %>
				<option selected="selected"><%= opt.title %></option>
			<% else %>
				<option><%= opt.title %></option>
			<% end %>
		<% end %>
	</select><br>

	<%= t.submit "creer un compte" %>

<% end %>