<div class="site-section bg-light">
      <div class="container">
        <div class="row">

          <div class="col-lg-12">
            <div class="p-3 mb-3 bg-white">
              <center>
                <h3 class="h5 text-black">PROFILE : <%= current_user.email %></h3>
              </center>
            </div>
          </div>
       
          <div class="col-lg-7">
            <div class="p-4 mb-3 bg-white">
              
              <p class="mb-0 font-weight-bold">Nom : <span class="font-weight-normal"> <%= @user.firstname %> </span></p> 
              <p class="mb-0 font-weight-bold">Prénoms : <span class="font-weight-normal"> <%= @user.lastname %> </span></p>             
              <p class="mb-0 font-weight-bold">Email : <span class="font-weight-normal"> <%= @user.email %> </span></p>
              <p class="mb-0 font-weight-bold">Téléphone : <span class="font-weight-normal"> <%= @user.telephone %> </span></p>


              <br>
              <%= link_to "Modifier", edit_userservice_path(@user.id), class:"btn btn-primary px-4 py-2 text-white pill" %>

            </div>
          </div>

          <div class="col-lg-5">
          	<div class="p-4 mb-3 bg-white">
          		<h3 class="h5 text-black ">Your avatar</h3>
          		<p>
	          		<% if @user.pdp1.attached? %>
						<%= image_tag @user.pdp1.variant(resize: "400x400") %>
					<% else %>
						<img src="int.jpg" height= "150">
					<% end %>
      			</p>
			</div>
          </div>

        </div>
      </div>
</div>

<div class="py-5 quick-contact-info">
      <div class="container">
        <div class="row">
          <div class="col-md-4">
            <div>
              <h2><span class="icon-room"></span> Location</h2>
              <p class="mb-0">New York - 2398 <br>  10 Hadson Carl Street</p>
            </div>
          </div>
          <div class="col-md-4">
            <div>
              <h2><span class="icon-clock-o"></span> Service Times</h2>
              <p class="mb-0">Wednesdays at 6:30PM - 7:30PM <br>
              Fridays at Sunset - 7:30PM <br>
              Saturdays at 8:00AM - Sunset</p>
            </div>
          </div>
          <div class="col-md-4">
            <h2><span class="icon-comments"></span> Get In Touch</h2>
            <p class="mb-0">Email: info@yoursite.com <br>
            Phone: (123) 3240-345-9348 </p>
          </div>
        </div>
      </div>
</div>